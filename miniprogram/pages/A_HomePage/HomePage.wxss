/* miniprogram/pages/HomePage/HomePage.wxss */
page {
  background-color: #ffffff;
}

.whiteboard {
  background-color: white;
  top: 0;
  position: fixed;
  height: 100vh;
  width: 100vw;
}

.logoimage {
  margin-left: 20rpx;
  width: 240rpx;
  height: 80rpx;
}

.gradual {
  position: fixed;
  width: 100vw;
  height: 30vh;
  border-bottom-left-radius: 16vh;
  border-bottom-right-radius: 16vh;
}

.backup {
  background: -webkit-linear-gradient(top, #0081ff, rgba(1,1,1,0));
}

.ButtomBar {
  position: fixed;
  width: 100%;
  bottom: 0rpx;
  z-index: 999;
}

.headNavi {
  position: fixed;
  top: 0;
  width: 100%;
  z-index: 999;
}

.load{
  text-align: center;
  width: 100vw;
  position: fixed;
  z-index: -1;
  top: 40vh;
}

.cardItem {
  height: 380rpx;
  border-radius: 20rpx;
  padding-left: 20rpx;
  margin: 24rpx;
}

.cardimg {
  position: absolute;
  height: 380rpx;
  width: 400rpx;
  border-radius: 20rpx;
  right: 24rpx;
}

.cardimg-overlay {
  position: absolute;
  height: 380rpx;
  width: 400rpx;
  border-top-right-radius: 20rpx;
  border-bottom-right-radius: 20rpx;
  right: 24rpx;
  background: -webkit-linear-gradient(left, rgba(255,255,255,1), rgba(255,255,255,0.8),rgba(255,255,255,0.5));
}

.spinner {
  margin: 32px auto;
  width: 120px;
  text-align: center;
}

.spinner view {
  width: 12px;
  height: 12px;
  margin-left:5rpx;
  background-color: #333;
  border-radius: 100%;
  display: inline-block;
  -webkit-animation: sk-bouncedelay 1.6s infinite ease-in-out both;
  animation: sk-bouncedelay 1.6s infinite ease-in-out both;
}

.spinner .bounce1 {
  -webkit-animation-delay: -0.64s;
  animation-delay: -0.64s;
}

.spinner .bounce2 {
  -webkit-animation-delay: -0.48s;
  animation-delay: -0.48s;
}
.spinner .bounce3 {
  -webkit-animation-delay: -0.32s;
  animation-delay: -0.32s;
}
.spinner .bounce4{
  -webkit-animation-delay: -0.16s;
  animation-delay: -0.16s;
}

@-webkit-keyframes sk-bouncedelay {
  0%, 80%, 100% { -webkit-transform: scale(0) }
  40% { -webkit-transform: scale(1.0) }
}

@keyframes sk-bouncedelay {
  0%, 80%, 100% {
    -webkit-transform: scale(0);
    transform: scale(0);
  } 40% {
    -webkit-transform: scale(1.0);
    transform: scale(1.0);
  }
}

.jumpwait {
  width: 100vw;
  display: flex;
  justify-content: center;
}

.jumpwaitimg {
  width: 300rpx;
  height: 300rpx;
  border-radius: 100rpx;
}