page{
  height: 100%;
}

.bar-bottom{
  border-bottom:2px solid #0081ff;
}

.info-container {
  background-color: #0081ff;
  height: auto;
  display:flex;
  flex-direction: row;
  justify-content: start;
  /*padding: 200rpx 0;*/
  box-sizing: border-box;
  margin: 0 0 0 0;
  border-radius: 0 0 48rpx 48rpx;
}

.info-container .avater{
  padding:36rpx 36rpx 36rpx 36rpx;
  text-align: center;
}

.info-container .avater image{
  width: 128rpx;
  height: 128rpx;
  border-radius: 60%;
  background-size: cover;
  border: 0px solid white;
}

.info-container .userInfo{
  width: 60%;
}

.AdminBtn {
  width: 40vw;
}

.info-container .userInfo .nickname{
  margin: 0;
  font-size: 40rpx;
  font-weight: 400;
  padding:30rpx 0 0 30rpx;
}

.info-container .userInfo .statues{
  padding:0 0 0 20rpx;
  margin: 0 0 20rpx 0;
  display: flex;
}

.info-container .userInfo .no-statues{
  padding:0 0 0 25rpx;
  margin: 20rpx 0 0rpx 0;
  display: flex;
}

.flex-bar {
  margin: 20rpx 20rpx 0 20rpx;
  border-radius: 20rpx;
  padding: 0 48rpx;
  height: 86rpx;
  line-height: 86rpx;
  position: relative;
  background-color: #fff;
  box-sizing: border-box;
}
.shadowProjector {
  box-shadow: inset 0px -20px 8px -20px #0081ff;
}
.flex-bar .flex-bar-in {
display: -webkit-box;
display: -webkit-flex;
display: -ms-flexbox;
display: flex;
height: 100%;
flex-direction: row;
}
.flex-bar .flex-bar-in .on {
  border-bottom: 4px solid #39b54a;
}
.flex-bar .flex-bar-in .li {
  width: 33%;
  height: 100%;
  text-align: center;
  box-sizing: border-box;
  margin: 0 5px;
}
.flex-bar .flex-bar-in .a {
  display: block;
}

