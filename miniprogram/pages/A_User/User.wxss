}


.cardItem {
  height: 380rpx;
  border-radius: 20rpx;
  padding-left: 20rpx;
  margin: 24rpx;
}

.cardimg {
  position: absolute;
  height: 380rpx;
  width: 400rpx;
  border-radius: 20rpx;
  right: 24rpx;
}

.cardimg-overlay {
  position: absolute;
  height: 380rpx;
  width: 400rpx;
  border-top-right-radius: 20rpx;
  border-bottom-right-radius: 20rpx;
  right: 24rpx;
  background: -webkit-linear-gradient(left, rgba(255,255,255,1), rgba(255,255,255,0.8),rgba(255,255,255,0.5));
}